<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    tools:context=".ChooseLocation">

    <Button
        android:id="@+id/osakaBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA69E"
        android:text="Osaka"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/birminghamBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA69E"
        android:text="Birmingham"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="408dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:background="#AA4465"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="FINLAND"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/helsinkiBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="#AA4465"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="INDIA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/newDelhiBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="409dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:background="#AA4465"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="JAPAN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tokyoBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="#AA4465"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="UNITED KINGDOM"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/londonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ouluBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA69E"
        android:text="Oulu"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tokyoBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:text="Tokyo"
        android:background="#FFA69E"
        app:layout_constraintBottom_toTopOf="@+id/osakaBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/londonBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA69E"
        android:text="London"
        app:layout_constraintBottom_toTopOf="@+id/birminghamBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/helsinkiBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:text="Helsinki"
        android:background="#FFA69E"
        app:layout_constraintBottom_toTopOf="@+id/ouluBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/newDelhiBtn"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:background="#FFA69E"
        android:text="New Delhi"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="405dp"
        android:layout_height="165dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dutyfreecompare" />

</androidx.constraintlayout.widget.ConstraintLayout>